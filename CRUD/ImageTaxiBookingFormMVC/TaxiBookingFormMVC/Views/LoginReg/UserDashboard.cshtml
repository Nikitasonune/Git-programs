@model TaxiBookingFormMVC.Models.AccountRegisteration

@{
    ViewBag.Title = "UserDashboard";
}

@if (Session["Email"] != null)
{
    <h2 align="center" style="color:seagreen"><b>Welcome to User Dashboard @Session["Email"].ToString()</b></h2>
    <h3 align="right"><b> @Html.ActionLink("Logout", "Logout", "LoginReg")</b></h3>
    <b>Your Profile</b>
    <h4 align="left"><img src="@ViewBag.image" width="160" height="130" alt="Alternate Text" /></h4>
    <p>
        <h4 align="center"><b>@Html.ActionLink("Taxi Booking Form ", "Create", "cntBook")</b></h4>
    </p>
    <br />
<br />



    <table width="20%" border="0" align="center">
        <tr>
            <td>
                <b><i>Full Name:</i></b>
            </td>
            <td>
                @ViewData["fullname"].ToString()
            </td>
        </tr>

        <tr>
            <td>
                <b><i>Email:</i></b>
            </td>
            <td>
                @ViewData["email"].ToString()
            </td>
        </tr>

        <tr>
            <td>
                <b><i>Mobile:</i></b>
            </td>
            <td>
                @ViewData["mobile"].ToString()
            </td>
        </tr>

        <tr>
            <td>
                <b><i>Password:</i></b>
            </td>
            <td>
                @ViewData["password"].ToString()
            </td>
        </tr>


    </table>
}
else
{
    Response.Redirect("~/LoginReg/Login");
}




